{% extends 'base.html.twig' %}
{% block title %}Canciones{% endblock %}
{% block body %}
    <h1>Listado de canciones</h1>
    {% if canciones %}
        <p>Se han encontrado {{ contador }} canciones con el texto {{ texto }}:</p>
        {% for cancion in canciones %}
            {{include ('partials/datos_cancion.html.twig', {'cancion':cancion})}}
        {% endfor %}
    {% else %}
        <p>No se han encontrado canciones con el texto</p>
    {% endif %}
{% endblock %}